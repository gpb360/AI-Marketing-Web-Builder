[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    tests,
    .mypy_cache
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401   # imported but unused (for __init__.py files)
per-file-ignores =
    __init__.py:F401