{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp", "--browser", "chromium", "--headless", "--isolated", "--save-trace", "--save-session"],
      "env": {
        "HEADLESS": "true",
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
      }
    },
    "playwright-firefox": {
      "command": "npx",
      "args": ["@playwright/mcp", "--browser", "firefox", "--headless", "--isolated"],
      "env": {
        "HEADLESS": "true"
      }
    },
    "playwright-webkit": {
      "command": "npx",
      "args": ["@playwright/mcp", "--browser", "webkit", "--headless", "--isolated"],
      "env": {
        "HEADLESS": "true"
      }
    },
    "github": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "--env", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server:latest"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}